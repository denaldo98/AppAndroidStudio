<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:tint="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/btn_to_home"
                android:text="Impostazioni"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/impostazione1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="impostazione1"
        />

    <Button
        android:id="@+id/impostazione2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="impostazione2"
        />

    <Button
        android:id="@+id/impostazione3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="impostazione3"
        />

    <TextView
        android:id="@+id/impostazione4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:text="Impostazione4 (on/off)"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ToggleButton
        android:id="@+id/togglebtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/impostazione5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        android:text="Impostazione5 (on/off)"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ToggleButton
        android:id="@+id/togglebtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>